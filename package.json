{
  "name": "business-owner-monorepo",
  "version": "1.0.0",
  "description": "monorepo with Yarn Workspaces + Lerna - BE: NestJS",
  "scripts": {
    "build": "lerna run build",
    "format": "prettier --write \\\"packages/api-server/src/**/*.ts\\\" \\\"test/**/*.ts\\\"",
    "start": "lerna run start",
    "start:server": "lerna exec --scope @project/api-server --stream yarn start:dev",
    "start:prod": "",
    "lint": "lerna run lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "echo 'No e2e tests implemented yet.'"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
  },
  "devDependencies": {
    "@types/express": "4.17.11",
    "@types/node": "14.14.21",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "4.14.0",
    "@typescript-eslint/parser": "4.14.0",
    "eslint": "7.18.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-import": "2.22.1",
    "jest": "26.6.3",
    "lerna": "^3.22.1",
    "prettier": "2.2.1",
    "supertest": "6.1.1",
    "ts-jest": "26.4.4",
    "ts-loader": "8.0.14",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.1.3"
  }
}
